<Window x:Class="LecturerClaimSystems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claims Management System" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="Lecturer Claims Management System" 
                          FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="UserRoleText" Text="Role: Lecturer" 
                          FontSize="14" Foreground="#ECF0F1" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <TabControl Grid.Row="1" x:Name="MainTabControl" Margin="10">
            <!-- Lecturer Tab - Submit Claims -->
            <TabItem Header="Submit Claim" x:Name="LecturerTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Submit Your Claim" 
                                  FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Claim Form -->
                        <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" 
                               CornerRadius="5" Padding="20" Background="#ECF0F1">
                            <StackPanel>
                                <TextBlock Text="Claim Details" FontSize="16" 
                                          FontWeight="SemiBold" Margin="0,0,0,15"/>

                                <!-- Hours Worked -->
                                <TextBlock Text="Hours Worked:" Margin="0,0,0,5"/>
                                <TextBox x:Name="HoursWorkedTextBox" Height="30" 
                                        FontSize="14" Margin="0,0,0,15"/>

                                <!-- Hourly Rate -->
                                <TextBlock Text="Hourly Rate (R):" Margin="0,0,0,5"/>
                                <TextBox x:Name="HourlyRateTextBox" Height="30" 
                                        FontSize="14" Margin="0,0,0,15"/>

                                <!-- Additional Notes -->
                                <TextBlock Text="Additional Notes:" Margin="0,0,0,5"/>
                                <TextBox x:Name="NotesTextBox" Height="80" 
                                        TextWrapping="Wrap" AcceptsReturn="True" 
                                        FontSize="14" Margin="0,0,0,15" 
                                        VerticalScrollBarVisibility="Auto"/>

                                <!-- File Upload Section -->
                                <TextBlock Text="Supporting Documents:" 
                                          FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button x:Name="UploadButton" Content="📎 Upload Document" 
                                           Width="150" Height="35" Click="UploadButton_Click"
                                           Background="#3498DB" Foreground="White" 
                                           BorderThickness="0" Cursor="Hand"/>
                                    <TextBlock x:Name="UploadedFileText" 
                                              Text="No file selected" 
                                              VerticalAlignment="Center" Margin="15,0,0,0"
                                              Foreground="#7F8C8D"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Submit Button -->
                        <Button Grid.Row="2" x:Name="SubmitClaimButton" 
                               Content="✓ Submit Claim" 
                               Height="50" FontSize="16" FontWeight="Bold"
                               Background="#27AE60" Foreground="White" 
                               BorderThickness="0" Margin="0,20,0,0"
                               Click="SubmitClaimButton_Click" Cursor="Hand"/>

                        <!-- My Claims Section -->
                        <TextBlock Grid.Row="3" Text="My Claims" 
                                  FontSize="18" FontWeight="Bold" Margin="0,30,0,15"/>

                        <DataGrid Grid.Row="4" x:Name="LecturerClaimsGrid" 
                                 AutoGenerateColumns="False" IsReadOnly="True"
                                 Height="200" GridLinesVisibility="Horizontal"
                                 HeadersVisibility="Column" Background="White"
                                 AlternatingRowBackground="#F8F9FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="80"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding SubmissionDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="70"/>
                                <DataGridTextColumn Header="Rate (R)" Binding="{Binding HourlyRate}" Width="80"/>
                                <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount, StringFormat='{}{0:F2}'}" Width="100"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Document" Binding="{Binding DocumentName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Coordinator/Manager Tab - Verify Claims -->
            <TabItem Header="Verify Claims" x:Name="CoordinatorTab">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Pending Claims for Verification" 
                              FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <DataGrid Grid.Row="1" x:Name="PendingClaimsGrid" 
                             AutoGenerateColumns="False" IsReadOnly="True"
                             SelectionMode="Single" SelectionChanged="PendingClaimsGrid_SelectionChanged"
                             GridLinesVisibility="Horizontal" HeadersVisibility="Column" 
                             Background="White" AlternatingRowBackground="#F8F9FA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="80"/>
                            <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="120"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding SubmissionDate, StringFormat='{}{0:yyyy-MM-dd}'}" Width="100"/>
                            <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="70"/>
                            <DataGridTextColumn Header="Rate (R)" Binding="{Binding HourlyRate}" Width="80"/>
                            <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount, StringFormat='{}{0:F2}'}" Width="100"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                            <DataGridTextColumn Header="Document" Binding="{Binding DocumentName}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Approval Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" 
                               HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="ApproveButton" Content="✓ Approve" 
                               Width="150" Height="45" FontSize="14" FontWeight="Bold"
                               Background="#27AE60" Foreground="White" 
                               BorderThickness="0" Margin="0,0,15,0"
                               Click="ApproveButton_Click" Cursor="Hand"/>
                        <Button x:Name="RejectButton" Content="✗ Reject" 
                               Width="150" Height="45" FontSize="14" FontWeight="Bold"
                               Background="#E74C3C" Foreground="White" 
                               BorderThickness="0"
                               Click="RejectButton_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
